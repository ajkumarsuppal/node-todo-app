<h1>ToDO-List App</h1>
<div class="container">
    <form action="/addtask" method="post">
        <div class="container">
            <input type="text" name="newTask" id="" placeholder="Add New Task">
            <button> Add Task</button>
        </div>
        <div class="container">
            <h2>To Do:</h2>
            <% task.forEach(task => { %> 
                <li>
                    <input type="checkbox" name="check" value="<%= task %>" />  <%= task %> 
                </li>
            <% }) %>    
        </div>
    </form>
</div>